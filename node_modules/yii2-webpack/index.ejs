<?php
namespace <%= htmlWebpackPlugin.options.yii2Entry.namespace %>;

use yii\web\AssetBundle;

class <%= htmlWebpackPlugin.options.yii2Entry.className %> extends AssetBundle
{
    <% if (webpackConfig.mode === 'production') { %>
    public $sourcePath = '<%= htmlWebpackPlugin.options.yii2Entry.getSourcePath(webpackConfig.output.path) %>';
    <% } %>

    public $css = [
        <% for (var css in htmlWebpackPlugin.files.css) { %>'<%= htmlWebpackPlugin.files.css[css] %>',<% } %>
    ];

    public $js = [
        <% for (var js in htmlWebpackPlugin.files.js) { %>'<%= htmlWebpackPlugin.files.js[js] %>',<% } %>
    ];
}